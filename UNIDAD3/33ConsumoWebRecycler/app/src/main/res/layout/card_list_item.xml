<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frame"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp">

        <RelativeLayout
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A01313">

            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_delete_white_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/delete_icon"
                android:textColor="@android:color/white"
                android:textSize="13dp"
                android:text="Delete"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_foreground"
            android:background="@android:color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nombreAlumno"
                android:layout_toRightOf="@+id/nombre"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="17sp"
                android:text="Hola"
                android:layout_marginLeft="15dp"
                tools:ignore="UnknownId" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE: "
                android:textStyle="bold"
                android:id="@+id/nombre"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noControl"
                android:layout_below="@+id/nombreAlumno"
                android:layout_toRightOf="@+id/control"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"
                android:text="hola"
                tools:ignore="UnknownId" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. control: "
                android:textStyle="bold"
                android:id="@+id/control"
                android:layout_marginTop="24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cel"
                android:layout_below="@+id/noControl"
                android:layout_toRightOf="@+id/unida1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="hola"
                android:textStyle="bold"
                tools:ignore="UnknownId" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unidad 1: "
                android:textStyle="bold"
                android:id="@+id/unida1"
                android:layout_marginTop="46dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carrera"
                android:layout_below="@+id/cel"
                android:layout_toRightOf="@+id/unidad2"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="hola"
                tools:ignore="UnknownId" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unidad 2: "
                android:textStyle="bold"
                android:id="@+id/unidad2"
                android:layout_marginTop="66dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/u3"
                android:layout_below="@+id/carrera"
                android:layout_toRightOf="@+id/unidad3"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="hola"
                tools:ignore="UnknownId" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unidad 3: "
                android:textStyle="bold"
                android:id="@+id/unidad3"
                android:layout_marginTop="86dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>