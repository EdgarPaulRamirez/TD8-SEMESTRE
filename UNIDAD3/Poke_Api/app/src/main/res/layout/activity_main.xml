<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:textAlignment="viewEnd"
        android:visibility="gone"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:hint="ID de Pokemon"
            android:textSize="24sp"
            android:text="ID POKEMON: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:hint="ID de Pokemon"
            android:id="@+id/textID"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID de Pokemon"
            android:text="NOMBRE: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Pokemon"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:hint="ID de Pokemon"
            android:textSize="24sp"
            android:text="PESO: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:hint="Peso del Pokemon"
            android:id="@+id/textWeight"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:hint="ID de Pokemon"
            android:textSize="24sp"
            android:text="TIPO: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:hint="Tipos"
            android:id="@+id/textTypes"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:hint="ID de Pokemon"
            android:textSize="24sp"
            android:text="ALTURA: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:hint="Altura Pokemon"
            android:id="@+id/textHeight"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imagemPokemon"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    <TextView
        android:id="@+id/labelFieldSearch"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introduzca el nombre del Pokemon"/>


    <EditText
        android:id="@+id/edtNomePokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="butterfree"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Pokemon"
        android:onClick="buscarPokemon"/>

</>